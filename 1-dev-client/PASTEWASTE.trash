/* WORKING CSS */

* {
    box-sizing: border-box;
    font-family: 'Courier New';
}

a {
    color: #2821ad;
}

a:visited {
    color: #0d7211;
}

#container {
    position: absolute;
    top: 0;
    left: 0;
    height: 100vh;
    width: 100vw;
}

#leftPage {
    position: absolute;
    top: 0;
    left: 0;
    height: 100vh;
    width: 50vw;
    border-right: 1px solid black;
    overflow: scroll;
}

#leftPageTitleField {
    position: relative;
    display: flex;
    top: 0;
    left: 0;
    height: 10vh;
    min-height: fit-content;
    width: 100%;
    justify-content: center;
    align-items: center;
    font-size: 1.75em;
    font-weight: bold;
    border-bottom: 1px solid black;
}

#addTaskField {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 25vh;
    width: 100%;
    align-items: center;
    border-bottom: 1px solid black;
}

#taskTextEntryLabel, #taskTextEntry, #taskTextSubmit {
    margin-left: 1.5vw;
}

#addTaskInputFieldField {
    position: relative;
    margin-top: 4vh;
    height: 12vh;
    width: 70%;
}

#taskTextEntry {
    flex: 1;
    height: 100%;
    width: 100%;
    overflow-y: scroll;
    word-wrap: break-word;
    resize: none;
}

#rightPage {
    position: absolute;
    top: 0;
    right: 0;
    height: 100vh;
    width: 50vw;
    border-left: 1px solid black;
    overflow: scroll;
}

#rightPageTitleField {
    position: relative;
    display: flex;
    top: 0;
    right: 0;
    height: 10vh;
    min-height: fit-content;
    width: 100%;
    justify-content: center;
    align-items: center;
    font-size: 1.75em;
    font-weight: bold;
    border-bottom: 1px solid black;
}

#rightPageBufferSpace {
    position: relative;
    height: 6vh;
    width: 100%;
}

#userTaskField {
    position: relative;
    display: flex;
    height: 84vh;
    width: 100%;
    border-top: 1px solid black;
}

.taskColumn {
    position: relative;
    display: flex;
    flex-direction: column;
    flex: 1;
    height: 100%;
    border-left: 1px solid black;
    border-right: 1px solid black;
}

.taskCell {
    position: relative;
    display: flex;
    flex-direction: column;
    flex: 1;
    width: 100%;
    justify-content: flex-start;
    border-top: 1px solid black;
    border-bottom: 1px solid black;
}

.taskNumber {
    position: relative;
    display: flex;
    top: 5px;
    left: 5px;
    height: fit-content;
    width: fit-content;
    padding: 1px 5px;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-size: 0.9em;
    font-weight: bold;
    border: 1px solid black;
}

.taskBox {
    position: relative;
    display: flex;
    top: 5px;
    margin-top: 0.5vh;
    height: 40%;
    width: 100%;
    padding: 6px 7px;
    text-align: left;
    border: 1px solid black;
    font-size: 0.9em;
    background-color: green;
}

.taskTagBar {
    position: relative;
    display: flex;
    margin-top: 0;
    width: 100%;
    flex: 1;
    padding: 4px 7px;
    border: 1px solid black;
    overflow-x: scroll;
    font-weight: bold;
    color: rgba(152, 10, 10, 0.95);
    background-color: yellow;
}

.taskBottomBar {
    position: relative;
    display: flex;
    flex: 1;
    width: 100%;
    padding: 4px 7px;
    border: 1px solid black;
    background-color: orange;
}

.taskInfoBar {
    position: relative;
    display: flex;
    flex: 7;
    height: auto;
    padding: 4px 7px;
    border: 1px solid black;
}

.taskDeleteBox {
    position: relative;
    display: flex;
    height: 100%;
    flex: 1;
    padding: 4px 7px;
    border: 1px solid black;
}